{% extends 'layouts/app.jinja2' %}
{% import 'macros/detail.jinja2' as detail %}
{% import 'macros/modals.jinja2' as modals %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Autoridad-Servicio{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(cit_autoridad_servicio.descripcion) %}
        {{ topbar.button_previous('Autoridades-Servicios', url_for('cit_autoridades_servicios.list_active')) }}
        {% if current_user.can_edit('CIT AUTORIDADES SERVICIOS') %}
            {% if cit_autoridad_servicio.estatus == 'A' %}{{ topbar.button_delete('Eliminar', url_for('cit_autoridades_servicios.delete', cit_autoridad_servicio_id=cit_autoridad_servicio.id)) }}{% endif %}
            {% if cit_autoridad_servicio.estatus == 'B' %}{{ topbar.button_recover('Recuperar', url_for('cit_autoridades_servicios.recover', cit_autoridad_servicio_id=cit_autoridad_servicio.id)) }}{% endif %}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call detail.card(estatus=cit_autoridad_servicio.estatus) %}
        {{ detail.label_value('Autoridad clave', cit_autoridad_servicio.autoridad.clave, url_for('autoridades.detail', autoridad_id=cit_autoridad_servicio.autoridad_id)) }}
        {{ detail.label_value('Autoridad distrito', cit_autoridad_servicio.autoridad.distrito.nombre_corto) }}
        {{ detail.label_value('Autoridad descripcion', cit_autoridad_servicio.autoridad.descripcion_corta) }}
        {{ detail.label_value('Servicio clave', cit_autoridad_servicio.cit_servicio.clave, url_for('cit_servicios.detail', cit_servicio_id=cit_autoridad_servicio.cit_servicio_id)) }}
        {{ detail.label_value('Servicio descripcion', cit_autoridad_servicio.cit_servicio.descripcion) }}
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    {% if current_user.can_edit('CIT AUTORIDADES SERVICIOS') %}
        {% if cit_autoridad_servicio.estatus == 'A' %}{{ modals.custom_javascript_delete('Eliminar', '¿Eliminar esta Autoridad-Servicio?') }}{% endif %}
        {% if cit_autoridad_servicio.estatus == 'B' %}{{ modals.custom_javascript_recover('Recuperar', '¿Recuperar esta Autoridad-Servicio?') }}{% endif %}
    {% endif %}
    {{ detail.moment_js(moment) }}
{% endblock %}
