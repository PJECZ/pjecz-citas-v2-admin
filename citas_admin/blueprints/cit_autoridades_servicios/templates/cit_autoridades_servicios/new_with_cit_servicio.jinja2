{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Nueva Autoridad para Servicio{% endblock %}

{% block topbar_actions %}
    {{ topbar.page('Nueva Autoridad para ' + cit_servicio.clave) }}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% set form_kwargs = {'cit_servicio_id': cit_servicio.id} %}
        {% call f.form_tag('cit_autoridades_servicios.new_with_cit_servicio', fid='cit_autoridad_servicio_form', **form_kwargs) %}
            {% call f.form_group(form.autoridad) %}{% endcall %}
            {% call f.form_group(form.cit_servicio, readonly=true) %}{% endcall %}
            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}
