{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Asignar servicios de una categoria a todas las oficinas de un distrito{% endblock %}

{% block topbar_actions %}
    {{ topbar.page('Asignar servicios de una categoria a todas las oficinas de un distrito') }}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% set form_kwargs = {'instancia_id': instancia.id} %}
        {% call f.form_tag('blueprint.edit', fid='instancia_form', **form_kwargs) %}
            {% call f.form_group(form.cit_categoria) %}{% endcall %}
            {% call f.form_group(form.distrito) %}{% endcall %}
            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}
