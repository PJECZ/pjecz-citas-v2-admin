{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Asignar a todas las oficinas de un distrito los servicios de una categoria{% endblock %}

{% block topbar_actions %}
    {{ topbar.page('Asignar a todas las oficinas de un distrito los servicios de la categoria ' + cit_categoria.nombre) }}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% set form_kwargs = {'cit_categoria_id': cit_categoria.id} %}
        {% call f.form_tag('cit_oficinas_servicios.add_distrito_to_cit_categoria', fid='add_distrito_to_cit_categoria_form', **form_kwargs) %}
            {% call f.form_group(form.cit_categoria, readonly=true) %}{% endcall %}
            {% call f.form_group(form.distrito) %}{% endcall %}
            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}
