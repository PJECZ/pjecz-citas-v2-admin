{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/quill.jinja2' as quill %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Nuevo Boletin{% endblock %}

{% block custom_head %}
    {{ quill.head() }}
{% endblock %}

{% block topbar_actions %}
    {{ topbar.page('Nuevo Boletin') }}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% call f.form_tag('boletines.new', fid='boletin_form') %}
            {% call f.form_group(form.envio_programado) %}{% endcall %}
            {% call f.form_group(form.estado) %}{% endcall %}
            {% call f.form_group(form.asunto) %}{% endcall %}

            {{ quill.div(div_id='cabecera_quill', height='20vh') }}
            <div style="display: none;">{% call f.form_group(form.cabecera, readonly=true) %}{% endcall %}</div>

            {{ quill.div(div_id='contenido_quill', height='60vh') }}
            <div style="display: none;">{% call f.form_group(form.contenido, readonly=true) %}{% endcall %}</div>

            {{ quill.div(div_id='pie_quill', height='20vh') }}
            <div style="display: none;">{% call f.form_group(form.pie, readonly=true) %}{% endcall %}</div>

            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    <!-- Quill -->
    {{ quill.library() }}
    {{ quill.editor(instance='cabeceraQuill', div_id='cabecera_quill') }}
    {{ quill.editor(instance='contenidoQuill', div_id='contenido_quill') }}
    {{ quill.editor(instance='pieQuill', div_id='pie_quill') }}
    <!-- Llenar los inputs con JSON vacios -->
    <script>
        $(document).ready(function(){
            const vacio = '{"ops":[{"insert":"\n"}]}';
            const vacio_form = '{}';
            $('#cabecera').val(vacio);
            $('#contenido').val(vacio);
            $('#pie').val(vacio);
        });
    </script>
{% endblock %}
