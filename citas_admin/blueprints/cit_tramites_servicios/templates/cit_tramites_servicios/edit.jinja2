{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Editar Tramite y Servicio{% endblock %}

{% block topbar_actions %}
    {{ topbar.page('Editar ' + cit_tramite_servicio.nombre) }}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% set form_kwargs = {'cit_tramite_servicio_id': cit_tramite_servicio.id} %}
        {% call f.form_tag('cit_tramites_servicios.edit', fid='cit_tramite_servicio_form', **form_kwargs) %}
            {% call f.form_group(form.nombre) %}{% endcall %}
            {% call f.form_group(form.costo) %}{% endcall %}
            {% call f.form_group(form.url) %}{% endcall %}
            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}
