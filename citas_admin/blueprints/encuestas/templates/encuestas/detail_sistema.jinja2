                configDataTable['ajax']['data']['ya_registrado'] === undefined
            )
                return false;
            
            delete configDataTable['ajax']['data']['nombres'];
            delete configDataTable['ajax']['data']['apellido_primero'];
            delete configDataTable['ajax']['data']['email'];
            delete configDataTable['ajax']['data']['ya_registrado'];

            $('#cit_clientes_registros_datatable').DataTable().destroy();
            $('#cit_clientes_registros_datatable').DataTable(configDataTable);
        };
    </script>
    <!-- Gráfica -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.8.0/dist/chart.min.js"></script>
    <script>
        let myChart;

        const data_chart = {
            labels: ['Muy Satisfecho', 'Satisfecho', 'Normal', 'Insatisfecho', 'Muy Insatisfecho'],
            datasets: [{
                label: 'Votos',
                backgroundColor: [
                    "#c2d5a8",
                    "#cfe2ff",
                    "#f0d5ba",
                    "#cff4fc",
                    "#e3a7c0",
                ],
                data: [
                    {{detalle.resp_01_valor_05}},
                    {{detalle.resp_01_valor_04}},
                    {{detalle.resp_01_valor_03}},
                    {{detalle.resp_01_valor_02}},
                    {{detalle.resp_01_valor_01}},
                ],
            }]
        };

        const config = {
            type: 'bar',
            data: data_chart,
            options: {
                indexAxis: 'y',
                plugins: {
                    title: {
                        display: true,
                        text: 'Satisfacción',
                        font: {
                            size: 18
                        }
                    },
                    legend: {
                        position: 'right',
                    }
                },
                scales: {
                    x: {
                        min: 0,
                        max: 66,
                    }
                }
            }
        };

        myChart = new Chart(
            document.getElementById('myChart'),
            config
        );
    </script>
{% endblock %}
