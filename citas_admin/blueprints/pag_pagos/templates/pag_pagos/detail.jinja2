{% extends 'layouts/app.jinja2' %}
{% import 'macros/detail.jinja2' as detail %}
{% import 'macros/modals.jinja2' as modals %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Pago{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(pag_pagos.descripcion) %}
        {{ topbar.button_previous('Pagos', url_for('pag_pagos.list_active')) }}
        {% if current_user.can_edit('PAG PAGOS') %}
            {% if pag_pagos.estatus == 'A' %}{{ topbar.button_delete('Eliminar', url_for('pag_pagos.delete', pag_pagos_id=pag_pagos.id)) }}{% endif %}
            {% if pag_pagos.estatus == 'B' %}{{ topbar.button_recover('Recuperar', url_for('pag_pagos.recover', pag_pagos_id=pag_pagos.id)) }}{% endif %}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call detail.card(estatus=pag_pagos.estatus) %}
        {{ detail.label_value_big('Estado', pag_pagos.estado) }}
        {{ detail.label_value('Cliente', pag_pagos.cit_cliente.nombre) }}
        {{ detail.label_value('Descripción', pag_pagos.descripcion) }}
        {{ detail.label_value('Folio', pag_pagos.folio) }}
        {{ detail.label_value('Total', pag_pagos.total) }}
        {{ detail.label_value('Creado', moment(lista_de_acuerdo.creado, local=True).format('DD MMM YYYY')) }}
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    {% if current_user.can_edit('PAG PAGOS') %}
        {% if pag_pagos.estatus == 'A' %}{{ modals.custom_javascript_delete('Eliminar', '¿Eliminar a ' + pag_pagos.descripcion + '?') }}{% endif %}
        {% if pag_pagos.estatus == 'B' %}{{ modals.custom_javascript_recover('Recuperar', '¿Recuperar a ' + pag_pagos.descripcion + '?') }}{% endif %}
    {% endif %}
    {{ detail.moment_js(moment) }}
{% endblock %}
