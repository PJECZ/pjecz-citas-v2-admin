{% extends 'layouts/app.jinja2' %}
{% import 'macros/detail.jinja2' as detail %}
{% import 'macros/modals.jinja2' as modals %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Pago{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons('Pago ' + pag_pago.id | string) %}
        {{ topbar.button_previous('Pagos', url_for('pag_pagos.list_active')) }}
        {% if current_user.can_edit('PAG PAGOS') %}
            {% if pag_pago.estatus == 'A' %}{{ topbar.button_delete('Eliminar', url_for('pag_pagos.delete', pag_pago_id=pag_pago.id)) }}{% endif %}
            {% if pag_pago.estatus == 'B' %}{{ topbar.button_recover('Recuperar', url_for('pag_pagos.recover', pag_pago_id=pag_pago.id)) }}{% endif %}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call detail.card(estatus=pag_pago.estatus) %}
        {{ detail.label_value_big('Estado', pag_pago.estado) }}
        {% if current_user.can_view('CIT CLIENTES') %}
            {{ detail.label_value('Cliente', pag_pago.cit_cliente.nombre, url_for('cit_clientes.detail', cit_cliente_id=pag_pago.cit_cliente_id)) }}
        {% else %}
            {{ detail.label_value('Cliente', pag_pago.cit_cliente.nombre) }}
        {% endif %}
        {% if current_user.can_view('PAG TRAMITES SERVICIOS') %}
            {{ detail.label_value('Trámite y Servicio', pag_pago.pag_tramite_servicio.clave, url_for('pag_tramites_servicios.detail', pag_tramite_servicio_id=pag_pago.pag_tramite_servicio_id)) }}
        {% else %}
            {{ detail.label_value('Trámite y Servicio', pag_pago.pag_tramite_servicio.clave) }}
        {% endif %}
        {{ detail.label_value('e-mail', pag_pago.email) }}
        {{ detail.label_value('Folio', pag_pago.folio) }}
        {{ detail.label_value('Total', pag_pago.total) }}
        {{ detail.label_value_boolean('Ya se envió comprobante', pag_pago.ya_se_envio_comprobante) }}
        {{ detail.label_value('Creado', moment(pag_pago.creado, local=True).format('DD MMM YYYY')) }}
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    {% if current_user.can_edit('PAG PAGOS') %}
        {% if pag_pago.estatus == 'A' %}{{ modals.custom_javascript_delete('Eliminar', '¿Eliminar este pago?') }}{% endif %}
        {% if pag_pago.estatus == 'B' %}{{ modals.custom_javascript_recover('Recuperar', '¿Recuperar este pago?') }}{% endif %}
    {% endif %}
    {{ detail.moment_js(moment) }}
{% endblock %}
