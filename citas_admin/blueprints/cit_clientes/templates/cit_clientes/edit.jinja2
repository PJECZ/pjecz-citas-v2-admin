{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Editar Cliente{% endblock %}

{% block topbar_actions %}
    {{ topbar.page('Editar Cliente: ' + cit_cliente.id | string ) }}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% set form_kwargs = {'cit_cliente_id': cit_cliente.id} %}
        {% call f.form_tag('cit_clientes.edit', fid='cit_cliente_form', **form_kwargs) %}
            {% call f.form_group(form.nombres) %}{% endcall %}
            {% call f.form_group(form.apellido_primero) %}{% endcall %}
            {% call f.form_group(form.apellido_segundo) %}{% endcall %}
            <div class="form-group mb-2">
                <label class="form-label" for="curp"><strong>CURP</strong></label>
                <input class="form-control font-monospace" id="curp" name="curp" required type="text" value="{{cit_cliente.curp}}">
            </div>
            {% call f.form_group(form.email) %}{% endcall %}
            {% call f.form_group(form.telefono) %}{% endcall %}
            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}
